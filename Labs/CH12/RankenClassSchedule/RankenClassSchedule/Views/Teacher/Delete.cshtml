@model Teacher
@{
    ViewData["Title"] = "Delete Teacher";
}

<h1 class="display-4">Delete Teacher</h1>

<div>
    <h2>Are you sure you want to delete this teacher?</h2>
    <dl class="row">
        <dt class="col-sm-2">First Name</dt>
        <dd class="col-sm-10">@Model.FirstName</dd>
        <dt class="col-sm-2">Last Name</dt>
        <dd class="col-sm-10">@Model.LastName</dd>
    </dl>
</div>

<form asp-action="Delete" method="post">
    <input type="hidden" asp-for="TeacherId" />
    <button type="submit" class="btn btn-danger">Delete</button>
    <a asp-action="Index" class="btn btn-outline-dark">Cancel</a>
</form>
