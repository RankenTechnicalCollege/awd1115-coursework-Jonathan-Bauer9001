@model Class
@{
	ViewBag.Title = "Delete Class";
}
<h1 class="display-4">Delete Class</h1>
<div>
	<h2>Are you sure you want to delete this class?</h2>
	<dl class="row">
		<dt class="col-sm-2">Title</dt>
		<dd class="col-sm-10">@Model.Title</dd>
		<dt class="col-sm-2">Number</dt>
		<dd class="col-sm-10">@Model.Number</dd>
		<dt class="col-sm-2">Teacher</dt>
		<dd class="col-sm-10">@Model.Teacher.FullName</dd>
		<dt class="col-sm-2">Day</dt>
		<dd class="col-sm-10">@Model.Day.Name</dd>
		<dt class="col-sm-2">Time</dt>
		<dd class="col-sm-10">@Model.MilitaryTime</dd>
	</dl>
</div>
 <form asp-action="Delete" method="post">
	<input type="hidden" asp-for="ClassId" />
	<button type="submit" class="btn btn-danger">Delete</button>
	<a asp-action="Index" asp-controller="Home" class="btn btn-outline-dark">Cancel</a>
</form>