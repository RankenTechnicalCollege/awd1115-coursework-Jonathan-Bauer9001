@model Class
@{
	ViewData["Title"] = $"{ViewBag.Operation} Class";
}
<h1 class="display-4">@ViewData["Title"]</h1>

<form asp-action="Add" method="post">
	<div class="mb-3">
		<label asp-for="Title" class="form-label"></label>
		<input asp-for="Title" class="form-control" />
		<span asp-validation-for="Title" class="text-danger"></span>
	</div>
	<div class="mb-3">
		<label asp-for="Number" class="form-label"></label>
		<input asp-for="Number" class="form-control" />
		<span asp-validation-for="Number" class="text-danger"></span>
	</div>
	<div class="mb-3">
		<label asp-for="Teacher" class="form-label"></label>
		<select asp-for="TeacherId" class="form-select" asp-items="@(new SelectList(ViewBag.Teachers, "TeacherId", "FullName"))"></select>
		<span asp-validation-for="TeacherId" class="text-danger"></span>
	</div>
	<div class="mb-3">
		<label asp-for="Day" class="form-label"></label>
		<select asp-for="DayId" class="form-select" asp-items="@(new SelectList(ViewBag.Days, "DayId", "Name"))"></select>
		<span asp-validation-for="DayId" class="text-danger"></span>
	</div>
	<div class="mb-3">
		<label asp-for="MilitaryTime" class="form-label"></label>
		<input asp-for="MilitaryTime" class="form-control" />
		<span asp-validation-for="MilitaryTime" class="text-danger"></span>
	</div>
	<input type="hidden" asp-for="ClassId" />
	<button type="submit" class="btn btn-dark">Save</button>
	<a asp-action="Index" asp-controller="Home" class="btn btn-outline-dark">Cancel</a>
</form>