@model List<FAQ>
@{
	ViewData["Title"] = "FAQs";
}
<div>

	<div class="row">
		<div class="col">
			<ul class="list-group">
				@foreach (Category c in ViewBag.Categories)
				{
					<li class="list-group-item">
						<a asp-action="Index" asp-route-category="@c.CategoryId">@c.Name</a>
					</li>
				}
			</ul>
		</div>

		<div class="col-8">
			<div class="col">
				<ul class="nav nav-tabs">
					<li class="nav-item">
						<a class="nav-link active" aria-current="page" href="/">All FAQs</a>
					</li>
					@foreach (Topic topic in ViewBag.Topics)
					{
						<li class="nav-item">
							<a class="nav-link" asp-action="Index" asp-route-topic="@topic.TopicId">@topic.Name</a>
						</li>
					}
				</ul>
			</div>
			<div class="col">
				<ul class="list-group">
					@foreach (var faq in Model)
					{
						<li class="list-group-item">
							<h5>@faq.Question</h5>
							<p>@faq.Answer</p>
						</li>
					}
				</ul>
			</div>
		</div>
	</div>
</div>
