@model PriceQuote
@{
    Layout = "_Layout";
}

<h1>Price Quotation</h1>
<form asp-action="Index" method="post" class="row">
    <div asp-validation-summary="All" class="col-lg-12 text-danger"></div>
    <div>
        <label asp-for="SubTotal" class="form-label">Subtotal</label>
        <input asp-for="SubTotal" class="form-control" />
    </div>
    <div>
        <label asp-for="DiscountPercent" class="form-label">Discount Percentage</label>
        <input asp-for="DiscountPercent" class="form-control" />
    </div>
    <div>
        <label asp-for="DiscountAmount" class="form-label">Discount:</label>
        <input value="@ViewBag.Discount.ToString("C")" class="form-control" readonly />
    </div>
    <div>
        <label asp-for="Total" class="form-label">Total:</label>
        <input value="@ViewBag.Total.ToString("C")" class="form-control" readonly />
    </div>
    <button type="submit" class="btn btn-primary m-3 col-sm-1">Calculate</button>
    <a asp-action="Index" class="btn btn-secondary m-3 col-sm-1">Clear</a>
</form>