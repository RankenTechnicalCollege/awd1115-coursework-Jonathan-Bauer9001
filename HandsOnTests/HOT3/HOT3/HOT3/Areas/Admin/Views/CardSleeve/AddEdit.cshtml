@model HOT3.Models.Product
@*
    For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860
*@
@{
	ViewBag.Title = $"{ViewBag.Action} Card Sleeve";
}
<h1>@ViewBag.Title</h1>
<form asp-action="Add" asp-controller="CardSleeve" method="post" enctype="multipart/form-data">
	<div class="form-group mb-3">
		<label asp-for="ProductName" class="form-label"></label>
		<input asp-for="ProductName" class="form-control" />
		<span asp-validation-for="ProductName" class="text-danger"></span>
	</div>
	<div class="form-group mb-3">
		<label asp-for="ProductBrand" class="form-label"></label>
		<input asp-for="ProductBrand" class="form-control" />
		<span asp-validation-for="ProductBrand" class="text-danger"></span>
	</div>
	<div class="form-group mb-3">
		<label asp-for="ProductColor" class="form-label"></label>
		<input asp-for="ProductColor" class="form-control" />
		<span asp-validation-for="ProductColor" class="text-danger"></span>
	</div>
	<div class="form-group mb-3">
		<label asp-for="ProductPrice" class="form-label"></label>
		<input asp-for="ProductPrice" class="form-control" />
		<span asp-validation-for="ProductPrice" class="text-danger"></span>
	</div>
	<div class="form-group mb-3">
		<label asp-for="ProductStock" class="form-label"></label>
		<input asp-for="ProductStock" class="form-control" />
		<span asp-validation-for="ProductStock" class="text-danger"></span>
	</div>
	<div class="form-group mb-3">
		<label asp-for="ProductImageUrl" class="form-label">Upload Image</label>
		<input asp-for="ProductImageUrl" class="form-control" />
		<span asp-validation-for="ProductImageUrl" class="text-danger"></span>
	</div>
	<input type="hidden" asp-for="ProductId" />
	<button type="submit" class="btn btn-primary">Save</button>
	<a asp-action="List" asp-controller="CardSleeve" class="btn btn-secondary">Cancel</a>
</form>
