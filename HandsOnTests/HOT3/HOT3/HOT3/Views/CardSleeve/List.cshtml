@model List<HOT3.Models.Product>
@*
    For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860
*@
@{
	ViewBag.Title = "Card Sleeves List";
}
<h1>Card Sleeves</h1>
<div class="row my-5">
	<div class="col-md-2">
		<h3>Brands</h3>
		<ul class="list-group">
			<li class="list-group-item">
				<a asp-controller="CardSleeve" asp-action="List" asp-route-brand="all">All Brands</a>
			</li>
			<li class="list-group-item">
				<a asp-controller="CardSleeve" asp-action="List" asp-route-brand="Dragon Shield">Dragon Shield</a>
			</li>
			<li class="list-group-item">
				<a asp-controller="CardSleeve" asp-action="List" asp-route-brand="Ultimate Guard">Ultimate Guard</a>
			</li>
			<li class="list-group-item">
				<a asp-controller="CardSleeve" asp-action="List" asp-route-brand="Ultra Pro">Ultra Pro</a>
			</li>
		</ul>
	</div>
	<div class="col-md-10 d-flex flex-wrap gap-3">
		@foreach (var product in Model)
		{
			<div class="card mb-3" style="width: 24rem; min-height: 32rem; display: flex; flex-direction: column;">
				<div class="col">
					<div class="row-md-4">
						<img src="~/images/@product.ProductImageUrl" class="img-fluid rounded-start" alt="@product.ProductName" style="height: 200px; object-fit: cover; width: 100%;" />
					</div>
					<div class="row-md-8" style="flex: 1;">
						<div class="card-body d-flex flex-column h-100">
							<h5 class="card-title">@product.ProductName</h5>
							<p class="card-text">Brand: @product.ProductBrand</p>
							<p class="card-text">Color: @product.ProductColor</p>
							<p class="card-text">Price: @product.ProductPrice?.ToString("C")</p>
							<p class="card-text">Stock: @product.ProductStock?.ToString()</p>
							<div class="mt-auto">
								<a asp-controller="CardSleeve" asp-action="Detail" asp-route-id="@product.ProductId" asp-route-slug="@product.Slug" class="btn btn-primary">View Details</a>
							</div>
						</div>
					</div>
				</div>
			</div>
		}
	</div>
</div>
