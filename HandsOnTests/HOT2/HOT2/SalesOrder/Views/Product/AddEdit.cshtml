@model Product
@{
	ViewBag.Title = $"{ViewBag.Action}";
}
<h2>@ViewBag.Action Product</h2>
<form asp-action="AddEdit" method="post" class="row g-3">

	<div class="col-md-6">
		<label asp-for="ProductName" class="form-label">Name</label>
		<input asp-for="ProductName" class="form-control" />
		<span asp-validation-for="ProductName" class="text-danger"></span>
	</div>
	<div class="col-md-6">
		<label asp-for="ProductDescShort" class="form-label">Short Description</label>
		<input asp-for="ProductDescShort" class="form-control" />
		<span asp-validation-for="ProductDescShort" class="text-danger"></span>
	</div>
	<div class="col-md-6">
		<label asp-for="ProductDescLong" class="form-label">Long Description</label>
		<input asp-for="ProductDescLong" class="form-control" />
		<span asp-validation-for="ProductDescLong" class="text-danger"></span>
	</div>
	<div class="col-md-6">
		<label asp-for="ProductImage" class="form-label">Image</label>
		<input asp-for="ProductImage" class="form-control" />
		<span asp-validation-for="ProductImage" class="text-danger"></span>
	</div>
	<div class="col-md-6">
		<label asp-for="ProductPrice" class="form-label">Price</label>
		<input asp-for="ProductPrice" class="form-control" />
		<span asp-validation-for="ProductPrice" class="text-danger"></span>
	</div>
	<div class="col-md-6">
		<label asp-for="ProductQty" class="form-label">Quantity</label>
		<input asp-for="ProductQty" class="form-control" />
		<span asp-validation-for="ProductQty" class="text-danger"></span>
	</div>
	<div class="col-md-6">
		<label asp-for="CategoryId" class="form-label">Category Name</label>
		<select asp-for="CategoryId" class="form-select">
			<option value="">-- Select Category --</option>
			@foreach (var category in ViewBag.Categories)
			{
				<option value="@category.CategoryId">@category.CategoryName</option>
			}
		</select>
		<span asp-validation-for="CategoryId" class="text-danger"></span>
	</div>
	<input type="hidden" asp-for="ProductId" />
	<div class="col-12">
		<button type="submit" class="btn btn-primary">Save</button>
		<a asp-action="List" class="btn btn-secondary">Cancel</a>
	</div>
</form>
