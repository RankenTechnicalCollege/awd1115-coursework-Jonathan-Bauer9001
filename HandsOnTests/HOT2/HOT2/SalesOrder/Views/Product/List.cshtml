@model List<Product>
@{
	ViewData["Title"] = "Product Manager";
}
<h1 class="display-4">Product Manager</h1>
<table class="table table-striped">
	<thead>
		<tr>
			<th>Name</th>
			<th>Short Description</th>
			<th>Long Description</th>
			<th>Image</th>
			<th>Price</th>
			<th>Quantity</th>
			<th>Category</th>
			<th></th>
		</tr>
	</thead>
	<tbody>
		@foreach (var product in Model)
		{
			<tr>
				<td>@product.ProductName</td>
				<td>@product.ProductDescShort</td>
				<td>@product.ProductDescLong</td>
				<td>@product.ProductImage</td>
				<td>@product.ProductPrice.ToString("C")</td>
				<td>@product.ProductQty</td>
				<td>@product.Category.CategoryName</td>
				<td>
					<a asp-controller="Product" asp-action="Edit" asp-route-id="@product.ProductId" asp-route-slug="@product.Slug" class="btn btn-sm btn-primary">Edit</a>
					<a asp-controller="Product" asp-action="Delete" asp-route-id="@product.ProductId" asp-route-slug="@product.Slug" class="btn btn-sm btn-danger">Delete</a>
				</td>
			</tr>
		}
	</tbody>
	<tfoot>
		<tr>
			<td colspan="8">
				<a asp-controller="Product" asp-action="Add" class="btn btn-success">Add New Product</a>
			</td>
		</tr>
</table>