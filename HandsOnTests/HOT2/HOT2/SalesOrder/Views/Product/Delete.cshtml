@model Product
@{
	ViewData["Title"] = "Delete Product";
}
<div style="background-color:lightcoral">
	<h2 class="display-4 p-2">Confirm Deletion</h2>
	<form asp-action="Delete" method="post" class="p-2">
		<input type="hidden" asp-for="ProductId" />
		<p>Are you sure you want to delete<span style="background-color: #fff">&nbsp;@Model.ProductName&nbsp;</span>?</p>
		<button type="submit" class="btn btn-danger">Yes, Delete</button>
		<a asp-action="List" asp-controller="Product" class="btn btn-secondary">No, Cancel</a>
	</form>
</div>