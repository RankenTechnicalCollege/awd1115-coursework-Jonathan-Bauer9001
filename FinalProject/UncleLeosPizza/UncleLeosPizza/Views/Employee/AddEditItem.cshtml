@model Item; 
@{
	ViewData["Title"] = $" {ViewBag.Action} Item:";
}
<h1>@ViewData["Title"] @Model.Name</h1>
<form asp-action="AddEditItem" asp-controller="Employee" method="post" enctype="multipart/form-data">
	<input type="hidden" asp-for="ItemId" />
	<input type="hidden" asp-for="Slug" />
	<div asp-validation-summary="All" class="text-danger"></div>
	<div class="form-group">
		<label asp-for="Name" class="control-label"></label>
		<input asp-for="Name" class="form-control" />
		<span asp-validation-for="Name" class="text-danger"></span>
	</div>
	<div class="form-group">
		<label asp-for="Description" class="control-label"></label>
		<input asp-for="Description" class="form-control" />
		<span asp-validation-for="Description" class="text-danger"></span>
	</div>

	<div class="form-group">
		<label asp-for="CategoryId" class="control-label">Category</label>
		<select asp-for="CategoryId" class="form-control">
			<option value="">-- Select Category --</option>
			@foreach (var category in ViewBag.Categories)
			{
				<option value="@category.CategoryId">@category.Name</option>
			}
		</select>
	</div>

	<div class="form-group">
		<input type="submit" value="Save" class="btn btn-primary my-2" />
		<a asp-action="Items" asp-controller="Employee" class="btn btn-secondary">Cancel</a>
	</div>
</form>

