@{
    ViewData["Title"] = "Menu";
}

<div id="onlineMenu" class="container my-5">
    <div class="row">
        <div class="col-2">
            <div id="list-example" class="list-group">
                @foreach (var category in ViewBag.Categories)
                {
                    <a class="list-group-item list-group-item-action" href="#category-@category.CategoryId">@category.Name</a>
                }
            </div>
        </div>
        <div class="col-10">
            <div data-spy="scroll" data-target="#list-example" data-offset="0" class="scrollspy-example" style="position: relative; height: 600px; overflow: auto;">
                @foreach (var category in ViewBag.Categories)
                {
                    <h4 id="category-@category.CategoryId">@category.Name</h4>
                    <div class="d-flex flex-wrap gap-3 mb-4">
                        @foreach (var item in ((IEnumerable<Item>)ViewBag.Items).Where(i => i.CategoryId == category.CategoryId))
                        {
                            <div class="list-group-item" style="border: none; padding: 0;">
                                <div class="card" style="width: 18rem; min-height: 280px; display: flex; flex-direction: column;">
                                    <img class="card-img-top" src="..." alt="Card image cap" style="height: 100px; object-fit: cover;">
                                    <div class="card-body" style="flex: 1 1 auto; display: flex; flex-direction: column;">
                                        <h5 class="card-title">@item.Name</h5>
                                        <p class="card-text" style="overflow: hidden; text-overflow: ellipsis; display: -webkit-box; -webkit-line-clamp: 2; -webkit-box-orient: vertical;">@item.Description</p>
                                        <div style="margin-top: auto;">
                                            <a asp-controller="Menu" asp-action="Item" asp-route-id="@item.ItemId" class="btn btn-primary">More Info</a>
                                            <form asp-controller="OnlineOrdering" asp-action="AddToOrder" asp-route-id="@item.ItemId" method="post" style="display:inline;">
                                                <button type="submit" class="btn btn-primary">Order Online</button>
                                            </form>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        }
                    </div>
                }
            </div>
        </div>
    </div>
</div>