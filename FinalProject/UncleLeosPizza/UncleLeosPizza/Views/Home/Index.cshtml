@{
    ViewData["Title"] = "Uncle Leo's Pizza";
}
<style>

    .bungee-regular {
        font-family: "Bungee", sans-serif;
        font-weight: 400;
        font-style: normal;
    }

    .roboto-400 {
        font-family: "Roboto", sans-serif;
        font-optical-sizing: auto;
        font-weight: 400;
        font-style: normal;
        font-variation-settings: "wdth" 100;
    }

    .pacifico-regular {
        font-family: "Pacifico", cursive;
        font-weight: 400;
        font-style: normal;
    }
    #hero {
        background-image: url('@Url.Content("~/images/stone.jpg")');
        background-size: cover;
        background-repeat: no-repeat;
        background-position: center center;
        background-attachment: fixed;
        border-bottom: .25rem solid #174;
        height: 93vh;
        width: 100vw;
        margin-left: 50%;
        transform: translateX(-50%);
    }
    .card{
        flex-grow:1;
    }
    img{
        border-block:1rem solid #174;
        max-hieght:50vh;
        max-width:100vw;
    }
    .btn-primary {
        color: #174;
        background-color: #fff;
        border-color: #174;
        border: .1rem solid;
        text-shadow: .25px .25px #333
    }

    .btn-danger {
        color: #fff;
        background-color: #711;
        border-color: #711;
        text-shadow: .25px .25px #333
    }
    .card{
        border: .25rem solid #174;
        border-radius: .5rem;
        margin:.25rem;
    }
    .card-title,.card-subtitle,.card-heading{
        background-color: #174;
        color:#fff;
        font-family: "Pacifico", cursive;
        font-size:larger;
        text-shadow: 2px 2px #333
    }
    .card-text{
        font-family: "Roboto", sans-serif;
    }
    .card-body {
        display: flex;
        flex-direction: column;
        justify-content: space-between;
        height: 100%; /* Ensure the card body fills the card */
    }
</style>
<div id="hero" class="hero flex-md-row  ">
        <h2 class="display-1 text-center text-light pacifico-regular py-3 ">Family-Owned & Operated</h2>
    <img class="flex-shrink-1 my-3" src="~/images/Artboard 1@1.5x.png" alt="Uncle Leo's"/>
    <div class="row justify-content-around">
            <a class="btn-lg col-md-5 p-3 m-2 btn btn-primary" href="tel:+131484527155"><span class="roboto-400 fw-bold">Call Us: (314) 842-7155</span></a>
        <a class=" btn-lg col-md-5 p-3 m-2 btn btn-danger fw-bold" asp-area="" asp-controller="OnlineOrdering" asp-action="Index"><span class="roboto-400 fw-bold">ORDER ONLINE</span></a>
    </div>

</div>

