
@{
	Layout = "_Layout.cshtml"; 
	string c = ViewContext.RouteData.Values["controller"]?.ToString() ?? "";
	string a = ViewContext.RouteData.Values["action"]?.ToString() ?? "";
	string area = ViewContext.RouteData.Values["area"]?.ToString() ?? "";
}
<style>
    a.navbar-brand {
        font-family: "Bungee", sans-serif;
        white-space: normal;
        text-align: center;
        word-break: break-all;
    }

    .nav-pills .nav-link.active, .nav-pills .show > .nav-link {
        color: #fff;
        background-color: #1b6ec2;
        border-color: #1861ac;
    }
    nav {
		border-bottom: .25rem solid #174;
    }
    .nav-link {
        transition: text-decoration 0.2s, transform 0.15s;
		font-weight: 500;
	}
    .nav-link:hover {
		text-decoration: underline;
	}
    /* Ensure active links are visually underlined and stand out */
    .nav-link.active {
        text-decoration: underline;
        text-decoration-thickness: 2px;
        text-underline-offset: 3px;
        color: #000 !important;
        font-weight: 600;
    }

    /* Buttons that act like nav links (ORDER ONLINE, Admin Section) */
    .nav-btn.active {
        text-decoration: underline;
        text-underline-offset: 3px;
        transform: none; /* keep button stable when active */
    }

    .box-shadow {
        box-shadow: 0 .25rem .75rem rgba(0, 0, 0, .05);
    }
    .nav-btn {
        transition: transform 0.2s;
    }
    .nav-btn:hover, .nav-link:hover {
        transform: scale(1.05);
        color: black;
		}
</style>
<header>
    <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white box-shadow mb-3">
        <div class="container-fluid">
            <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">Uncle Leo's Pizzeria</a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                    aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                <ul class="navbar-nav flex-grow-1">
                    <li class="nav-item active">
                        <a class="nav-link text-dark @(c == "Home" && a == "Index" ? "active" : "")" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link text-dark @(c == "Menu" && a == "List" ? "active" : "")" asp-area="" asp-controller="Menu" asp-action="List" asp-route-categoryName="all">Menu</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link text-dark @(c == "Home" && a == "About" ? "active" : "" )" asp-area="" asp-controller="Home" asp-action="About">About</a>
                    </li>
                </ul>
                <ul class="navbar-nav flex-row align-content-center">
                    <li class="nav-item mx-1">
                        <a class="nav-btn btn btn-outline-success border-2 fw-bold bg-light shadow" href="tel:+131484527155">(314) 842-7155</a>
                    </li>
                    <li class="nav-item mx-1">
                        <a class="nav-btn btn btn-outline-danger border-2 fw-bold bg-light shadow @(c == "OnlineOrder" && a == "Index" ? "active" : "")" asp-area="" asp-controller="OnlineOrder" asp-action="Index">ORDER ONLINE</a>
                    </li>
                    <li class="nav-item mx-1">
                        <a class="nav-btn btn btn-outline-secondary border-2 fw-bold bg-light shadow @(area == "Admin" && c == "Home" && a == "About" ? "active" : "")" asp-area="Admin" asp-controller="Home" asp-action="Index">
                            Admin Section
                        </a>
                    </li>
                </ul>
            </div>
        </div>
    </nav>
</header>
<div class="container">
    <main role="main" class="pb-3">
        @RenderBody()
    </main>
</div>