@model Product
@*
    For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860
*@
@{
	ViewBag.Title = "Product Details";
}
<h1>@ViewBag.Title</h1>
<input type="hidden" asp-for="@Model.ProductId" />
<div class="card mb-3" style="max-width: 540px;">
	<div class="row g-0">
		<div class="col-md-4">
			<img src="~/images/@Model.ProductImage" class="img-fluid rounded-start" alt="@Model.ProductName" />
		</div>
		<div class="col-md-8">
			<div class="card-body">
				<h5 class="card-title"> @Model.ProductName</h5>
				<p class="card-text"> @Model.ProductDescription</p>
				<p class="card-text"> @Model.ProductPrice</p>
				<p class="card-text"> @Model.Category.CategoryName</p>
				<div class="card-body">
					<a asp-action="Index" asp-controller="OnlineOrder" class="btn btn-danger">Order Online</a>
					<a asp-action="List" asp-controller="Menu" class="btn btn-secondary">Back to List</a>
				</div>
			</div>
		</div>
	</div>
</div>