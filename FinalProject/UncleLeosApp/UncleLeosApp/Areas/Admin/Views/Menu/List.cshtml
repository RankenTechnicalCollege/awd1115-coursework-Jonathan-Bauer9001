@model List<UncleLeosApp.Models.Product>
@*
    For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860
*@
@{
	ViewData["Title"] = "Admin - Menu List";
}
<h1>Admin - Menu List</h1>
<div class="row my-5">
	<div class="col-md-2">
		<a asp-action="AddEdit" asp-controller="Menu" asp-area="Admin" class="btn btn-success">Add New Product</a>
		<h3>Categories</h3>
		<div class="list-group">
			<a asp-action="List" asp-controller="Menu" asp-area="Admin" asp-route-categoryName="allitem" class="list-group-item list-group-item-action @(ViewBag.SelectedCategory == "allitem" ? "active" : "")" >All Items</a>
			@foreach (Category c in ViewBag.Categories)
			{
				<a asp-action="List" asp-controller="Menu" asp-area="Admin" asp-route-categoryName="@c.CategoryName" class="list-group-item list-group-item-action @(ViewBag.SelectedCategory == c.CategoryName.ToLower() ? "active" : "")">@c.CategoryName</a>
			}
		</div>
	</div>
	
	<div class="col-md-10">
		<table class="table table-bordered table-striped">
			<thead>
				<tr>
					<th>Product ID</th>
					<th>Name</th>
					<th>Description</th>
					<th>Price</th>
					<th>Category</th>
					<th>Image URL</th>
					<th>Actions</th>
				</tr>
			</thead>
			<tbody>
				@foreach (var item in Model)
				{
					<tr>
						<td>@item.ProductId</td>
						<td>@item.ProductName</td>
						<td>@item.ProductDescription</td>
						<td>@item.ProductPrice?.ToString("C")</td>
						<td>@item.Category.CategoryName</td>
						<td>@item.ProductImage</td>
						<td>
							<a asp-area="Admin" asp-controller="Menu" asp-action="AddEdit" asp-route-id="@item.ProductId" asp-route-slug="@item.Slug" class="btn btn-sm btn-primary">Edit</a>
							<a asp-area="Admin" asp-controller="Menu" asp-action="Delete" asp-route-id="@item.ProductId" asp-route-slug="@item.Slug" class="btn btn-sm btn-danger">Delete</a>
						</td>
					</tr>
				}
			</tbody>
		</table>
	</div>
</div>